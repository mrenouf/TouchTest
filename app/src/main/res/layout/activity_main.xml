<?xml version="1.0" encoding="utf-8"?>
<com.example.mrenouf.touchtest.TouchTracingFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:background="#222222">

    <com.example.mrenouf.touchtest.TouchTracingNestedScrollView
        android:id="@+id/a"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="50dp"
        android:requiresFadingEdge="vertical"
        android:background="#5e5e57">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.mrenouf.touchtest.TouchTracingFrameLayout
                android:id="@+id/a.1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#c27722" />


            <com.example.mrenouf.touchtest.TouchTracingFrameLayout
                android:id="@+id/a.2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#2f3fcf" />


            <com.example.mrenouf.touchtest.TouchTracingFrameLayout
                android:id="@+id/a.3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#c27722" />


            <com.example.mrenouf.touchtest.TouchTracingFrameLayout
                android:id="@+id/a.4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#2f3fcf" />

            <com.example.mrenouf.touchtest.TouchTracingFrameLayout
                android:id="@+id/a.5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#c27722" />


            <com.example.mrenouf.touchtest.TouchTracingFrameLayout
                android:id="@+id/a.6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#2f3fcf" />
        </LinearLayout>

    </com.example.mrenouf.touchtest.TouchTracingNestedScrollView>

    <com.example.mrenouf.touchtest.TouchTracingFrameLayout
        android:id="@+id/b"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:alpha="0.8"
        android:background="#227777"
        android:elevation="8dp">

        <com.example.mrenouf.touchtest.TouchTracingFrameLayout
            android:id="@+id/b.1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="#227722">

            <com.example.mrenouf.touchtest.TouchTracingFrameLayout
                android:id="@+id/b.2.A"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="#772222" />

        </com.example.mrenouf.touchtest.TouchTracingFrameLayout>

    </com.example.mrenouf.touchtest.TouchTracingFrameLayout>

</com.example.mrenouf.touchtest.TouchTracingFrameLayout>